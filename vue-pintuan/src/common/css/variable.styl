$color-theme = #fe5344


//加载提示文字样式
loadMore()
  height 1rem
  line-height 1rem
  color black
  font-size 0.3rem
  text-align center

reload()
  position absolute
  top -1rem
  width 100%
  height 1rem
  line-height 1rem
  color black
  font-size 0.3rem
  text-align center

//定位拉伸全屏
fullScreen(t,r,b,l)
  position: absolute
  top: t || 0
  left: l || 0
  right: r || 0
  bottom: b || 0


//点击区域扩展
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px
